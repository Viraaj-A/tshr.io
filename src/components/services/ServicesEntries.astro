---
const { service, description, url } = Astro.props;
---

<div class="group relative flex flex-col items-start">
  <dt>
    <h2 class="font-display text-green-500 text-2xl">
      <div
        class="absolute -inset-x-4 -inset-y-6 z-0 scale-95 bg-green-50/30 backdrop-blur-md opacity-0 transition group-hover:scale-100 group-hover:opacity-100 duration-300 sm:-inset-x-6 sm:rounded-2xl">
      </div>
      <a
        href={url}
        title={service}
        ><span
          class="absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl"
        ></span><span class="relative z-10">{service}</span></a
      >
    </h2>
  </dt>
  <dd>
    <p
      class="relative z-10 text-green-500 text-base mt-4 text-pretty items-center">
      {description}
    </p>
    <div
      class="relative group overflow-hidden h-12 group-hover:border-b duration-300 mt-4">
      <div
        aria-hidden="true"
        class="transition duration-300 group-hover:-translate-y-12">
        <div class="h-12 flex items-center">
          <span class="text-green-700">Learn more</span>
        </div>
        <div class="h-12 flex items-center justify-between w-full">
          <span class="text-green-700">{service} </span>
          <span aria-hidden="true">â†’</span>
        </div>
      </div>
    </div>
  </dd>
</div>
