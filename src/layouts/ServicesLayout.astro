---
import BaseLayout from "./BaseLayout.astro";
import CtaHire from "@/components/ctas/CtaHire.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout>
  <section>
    <div class="bg-white 2xl:max-w-7xl mx-auto overflow-hidden relative">
      <div class="px-8 py-24 lg:pt-32 md:px-16">
        <div class="flex flex-col gap-4 lg:grid-cols-3 max-w-5xl mx-auto">
          <div class="max-w-xl">
            <h1
              class="text-4xl tracking-tighter font-display text-green-800 lg:text-6xl text-balance">
              {frontmatter.service}
            </h1>
            <p class="text-green-500 text-2xl mt-8 font-display text-balance">
              {frontmatter.description}
            </p>
          </div>
          <div class="flex flex-col items-center justify-center">
            <div class="relativ">
              <div
                class="bg-green-200 text-green-600 relative rounded-2xl mt-12 z-10 py-4 px-4 bottom-0 w-full overflow-x-hidden">
                <div
                  class="items-center relative animate-slowMarquee flex gap-4 whitespace-nowrap">
                  {
                    Array.from({ length: 5 }).map((_) => (
                      <span>{frontmatter.description}</span>
                    ))
                  }
                </div>
              </div>
            </div>
            <div class="relativ">
              <div
                class="bg-green-200 text-green-600 relative rounded-2xl mt-6 z-10 py-4 px-4 bottom-0 w-full overflow-x-hidden">
                <div
                  class="items-center relative animate-slowMarquee flex gap-4 whitespace-nowrap">
                  {
                    Array.from({ length: 20 }).map((_) => (
                      <span>{frontmatter.service}.</span>
                    ))
                  }
                </div>
              </div>
            </div>
          </div>
          <div class="max-w-5xl">
            <div class="max-w-xl mt-12">
              <div class="prose-styles">
                <slot />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
