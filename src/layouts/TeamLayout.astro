---
import BaseLayout from "./BaseLayout.astro";
import CtaWork from "@/components/ctas/CtaWork.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <div class="bg-white 2xl:max-w-7xl mx-auto">
      <div class="px-8 py-24 lg:pt-32 md:px-16">
        <div class="grid items-start grid-cols-1 gap-4 lg:grid-cols-3 mx-auto">
          <div class="lg:sticky lg:top-32 lg:h-[90vh]">
            <div
             class="w-full bg-green-500 p-10 lg:p-16 h-full rounded-2xl flex flex-col justify-between lg:justify-start lg:gap-8">
              <h1
                class="text-4xl mt-12 lg:mt-0 tracking-tighter font-display text-white">
                {frontmatter.name}
              </h1>
              <dl
                class="relative flex flex-col gap-8 overflow-hidden w-full mt-4">
                <div
                  class="flex flex-col items-start gap-2 justify-between w-full">
                  <dt class="text-white font-semibold text-xl">Education</dt><dd
                    class="text-green-100 font-normal text-sm">
                    <ul>
                      {frontmatter.education.map((item) => <li> {item}</li>)}
                    </ul>
                  </dd>
                </div>
                <div
                  class="flex flex-col items-start gap-2 justify-between w-full">
                  <dt class="text-white font-semibold text-xl">Experience</dt>
                  <dd class="text-green-100 font-normal text-sm">
                    <ul>
                      {frontmatter.experience.map((item) => <li> {item}</li>)}
                    </ul>
                  </dd>
                </div>
              </dl>
            </div>
          </div>
          <div class="w-full lg:col-span-2">
            <div class="lg:w-2/5 lg:float-left lg:mr-8 mb-6">
              <img
                class="aspect-[4/4] object-cover rounded-t-2xl w-full"
                src={frontmatter.avatar.url}
                alt={frontmatter.avatar.alt}
              />
              <div
                class="bg-green-200 text-green-600 relative rounded-b-2xl z-10 py-2 px-4 bottom-0 w-full overflow-x-hidden">
                <div
                  class="items-center relative animate-marquee flex gap-4 whitespace-nowrap">
                  {
                    Array.from({ length: 1000 }).map((_) => (
                      <span>{frontmatter.name}</span>
                    ))
                  }
                </div>
              </div>
            </div>
            <div class="prose-styles">
              <slot />
            </div>
          </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
