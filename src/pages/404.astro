---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <section>
    <div class="bg-white 2xl:max-w-7xl mx-auto overflow-hidden relative">
      <img
        src="/shapes/3.svg"
        class="absolute invert w-full h-full opacity-[0.2] z-0 -right-64 sm:-right-96 -bottom-96"
        alt="your alt"
      />
      <div class="px-8 py-24 lg:pt-32 mx-auto max-w-6xl md:px-16 relative">
        <div class="w-full max-w-xl">
          <h1
            class="text-4xl tracking-tight font-display text-green-800 lg:text-5xl text-balance">
            Apologies, there is a 404 error.
          </h1>
          <p class="text-green-500 text-2xl mt-8 font-display text-balance">
            We apologize for the inconvenience. Please try again. If the problem persists, go
            back to the homepage. Please feel free to contact us if you would like to describe the problem at lawitapps@gmail.com
          </p>
        </div>
        <div class="flex mt-12 ">
          <a
            title="link to your page"
            aria-label="your label"
            href="/"
            class="flex size-32 text-sm md:text-base lg:text-2xl xl:text-3xl text-center md:size-32 shrink-0 lg:size-52 2xl:size-64 text-white hover:bg-brown-900 hover:text-brown-200 duration-300 items-center justify-center rounded-full bg-green-600">
            <p>
              <span class="block">Go back</span>
            </p>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
